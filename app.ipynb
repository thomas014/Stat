# @title ðŸ“Š Advanced Statistical Analysis (Ordered Flow + Method Guide)
import pandas as pd
import numpy as np
import scipy.stats as stats
import matplotlib.pyplot as plt
import seaborn as sns
import ipywidgets as widgets
import io
from statsmodels.stats.multicomp import pairwise_tukeyhsd
import itertools
from IPython.display import display, clear_output, Markdown

# --- 1. KNOWLEDGE BASE (The Educational Content) ---
method_info = {
    'ttest_ind': {
        "name": "Independent T-Test",
        "when": "Comparing the averages (means) of exactly 2 independent groups (e.g., Control vs Treatment).",
        "how": "Calculates the difference between group averages relative to the variance.",
        "interpret": "If P < 0.05, the difference is real and not due to chance."
    },
    'anova': {
        "name": "One-Way ANOVA",
        "when": "Comparing averages of 3+ independent groups (e.g., Diet A vs B vs C).",
        "how": "Analyzes variance 'between' groups vs 'within' groups.",
        "interpret": "If P < 0.05, at least one group is different. (Check the Pairwise table below)."
    },
    'mannwhitney': {
        "name": "Mann-Whitney U",
        "when": "Comparing 2 groups when data is NOT normal (skewed).",
        "how": "Ranks values from low to high and compares sum of ranks.",
        "interpret": "If P < 0.05, the distributions are significantly different."
    },
    'kruskal': {
        "name": "Kruskal-Wallis",
        "when": "Comparing 3+ groups when data is NOT normal (Non-parametric ANOVA).",
        "how": "Ranks data across all groups to see if one group consistently ranks higher.",
        "interpret": "If P < 0.05, groups differ. (Check Pairwise table below)."
    },
    'pearson': {
        "name": "Pearson Correlation",
        "when": "Linear relationship between two continuous numbers.",
        "how": "Calculates 'r' (-1 to 1).",
        "interpret": "High 'r' + P < 0.05 means a strong linear trend."
    },
    'spearman': {
        "name": "Spearman Correlation",
        "when": "Ranked/Non-linear relationship between two variables.",
        "how": "Converts values to ranks, then correlates.",
        "interpret": "High 'r' + P < 0.05 means a strong monotonic trend."
    },
    'chi2': {
        "name": "Chi-Square Test",
        "when": "Checking association between two Categorical variables.",
        "how": "Compares Observed counts vs Expected counts.",
        "interpret": "If P < 0.05, variables are related/dependent."
    }
}

# --- 2. WIDGET SETUP ---
style = {'description_width': 'initial'}
layout_full = widgets.Layout(width='98%')
plt.style.use('seaborn-v0_8-whitegrid') # Professional plot style

header = widgets.HTML("<h2>ðŸ“Š Advanced Statistical Analysis Tool</h2>")

# Upload
uploader = widgets.FileUpload(accept='.csv, .xlsx', multiple=False)
upload_label = widgets.Label("Step 1: Upload Data")

# Dropdowns
x_dropdown = widgets.Dropdown(description="Independent Var (X):", disabled=True, style=style, layout=layout_full)
y_dropdown = widgets.Dropdown(description="Dependent Var (Y):", disabled=True, style=style, layout=layout_full)

method_options = [
    ('Select Method', None),
    ('Independent T-Test (2 Groups)', 'ttest_ind'),
    ('One-Way ANOVA (3+ Groups)', 'anova'),
    ('Mann-Whitney U (Non-Parametric 2 Groups)', 'mannwhitney'),
    ('Kruskal-Wallis (Non-Parametric 3+ Groups)', 'kruskal'),
    ('Pearson Correlation (Linear)', 'pearson'),
    ('Spearman Correlation (Ranked)', 'spearman'),
    ('Chi-Square Test (Categorical)', 'chi2')
]
method_dropdown = widgets.Dropdown(options=method_options, description="Method:", disabled=True, style=style, layout=layout_full)

# Educational Guide Accordion
guide_output = widgets.Output()
guide_accordion = widgets.Accordion(children=[guide_output], selected_index=None)
guide_accordion.set_title(0, "ðŸ“˜ Method Guide (Click to see How & When to use)")

# Run Button & Output
run_button = widgets.Button(description="Run Analysis", button_style='primary', disabled=True, layout=widgets.Layout(width='50%'))
output_area = widgets.Output()

global_df = None

# --- 3. LOGIC FUNCTIONS ---

def on_upload_change(change):
    global global_df
    filename = list(uploader.value.keys())[0]
    content = uploader.value[filename]['content']
    try:
        if filename.endswith('.csv'): global_df = pd.read_csv(io.BytesIO(content))
        else: global_df = pd.read_excel(io.BytesIO(content))
        
        cols = global_df.columns.tolist()
        x_dropdown.options = cols
        y_dropdown.options = cols
        x_dropdown.disabled = False
        y_dropdown.disabled = False
        method_dropdown.disabled = False
        run_button.disabled = False
        
        with output_area:
            clear_output()
            print("âœ… File Loaded Successfully!")
            display(global_df.head())
    except Exception as e:
        with output_area: print(f"Error: {e}")

def on_method_change(change):
    # Updates the Blue Guide Box when user picks a method
    method = change['new']
    if method and method in method_info:
        info = method_info[method]
        guide_accordion.selected_index = 0 # Auto-open
        with guide_output:
            clear_output()
            display(Markdown(f"""
            **Method:** {info['name']}  
            **When to use:** {info['when']}  
            **How it works:** {info['how']}  
            **Interpretation:** {info['interpret']}
            """))
    else:
        guide_accordion.selected_index = None

def run_analysis(b):
    with output_area:
        clear_output()
        if global_df is None: return
        
        x_col = x_dropdown.value
        y_col = y_dropdown.value
        method_key = method_dropdown.value
        if not method_key: return

        try:
            df_clean = global_df[[x_col, y_col]].dropna()
            x_data = df_clean[x_col]
            y_data = df_clean[y_col]
            
            display(Markdown(f"### ðŸš€ Analysis Results: {method_info[method_key]['name']}"))

            # --- PART 1: DESCRIPTIVE STATISTICS (Summary First) ---
            if method_key in ['anova', 'kruskal', 'ttest_ind', 'mannwhitney']:
                display(Markdown("#### 1. Group Summaries (Mean, Median, etc.)"))
                stats_df = df_clean.groupby(x_col)[y_col].agg(['count', 'mean', 'median', 'std', 'min', 'max'])
                stats_df['range'] = stats_df['max'] - stats_df['min']
                display(stats_df.style.background_gradient(cmap='Blues', subset=['mean']))
            
            # --- PART 2: GLOBAL TEST & MAIN VISUAL ---
            display(Markdown("#### 2. Global Test Result & Distribution"))
            
            # Logic: ANOVA / KRUSKAL
            if method_key in ['anova', 'kruskal']:
                groups = [y_data[x_data == g] for g in x_data.unique()]
                if method_key == 'anova': stat, p = stats.f_oneway(*groups)
                else: stat, p = stats.kruskal(*groups)
                
                print(f"Global Statistic: {stat:.4f}, P-Value: {p:.4e}")
                
                if p < 0.05: display(Markdown(f"**Verdict:** âœ… Significant Difference Found (p < 0.05)."))
                else: display(Markdown(f"**Verdict:** âš ï¸ No Significant Difference (p >= 0.05)."))
                
                # Main Boxplot
                plt.figure(figsize=(10, 5))
                sns.boxplot(x=x_col, y=y_col, data=df_clean, hue=x_col, palette="viridis", legend=False)
                plt.title(f"Distribution: {y_col} by {x_col}")
                plt.show()

                # --- PART 3: POST-HOC (If Significant) ---
                if p < 0.05:
                    display(Markdown("---"))
                    display(Markdown("#### 3. Post-Hoc Analysis (Which groups differ?)"))

                    # A. ANOVA -> TUKEY
                    if method_key == 'anova':
                        tukey = pairwise_tukeyhsd(endog=y_data, groups=x_data, alpha=0.05)
                        tukey_df = pd.DataFrame(data=tukey._results_table.data[1:], columns=tukey._results_table.data[0])
                        display(tukey_df.style.apply(lambda x: ['background: #d4edda' if x['reject'] else '' for i in x], axis=1))
                        
                        display(Markdown("#### 4. Grouping Graph (Simultaneous Confidence Intervals)"))
                        display(Markdown("*Groups with overlapping lines are similar (No Difference).*"))
                        tukey.plot_simultaneous(figsize=(10, 5))
                        plt.show()

                    # B. KRUSKAL -> PAIRWISE MANN-WHITNEY
                    else:
                        unique_groups = x_data.unique()
                        pairs = list(itertools.combinations(unique_groups, 2))
                        corr_alpha = 0.05 / len(pairs)
                        
                        results = []
                        p_matrix = pd.DataFrame(index=unique_groups, columns=unique_groups, dtype=float)
                        
                        for g1, g2 in pairs:
                            u_stat, u_p = stats.mannwhitneyu(y_data[x_data==g1], y_data[x_data==g2])
                            results.append([g1, g2, u_p, u_p < corr_alpha])
                            p_matrix.at[g1, g2] = u_p
                            p_matrix.at[g2, g1] = u_p
                        
                        res_df = pd.DataFrame(results, columns=['Group 1', 'Group 2', 'P-Value', 'Significant?'])
                        display(res_df.style.apply(lambda x: ['background: #d4edda' if x['Significant?'] else '' for i in x], axis=1))
                        display(Markdown(f"*Note: Bonferroni adjusted alpha = {corr_alpha:.4f}*"))
                        
                        display(Markdown("#### 4. Grouping Graph (P-Value Matrix)"))
                        display(Markdown("*Light/Blue = Similar Groups. Red = Different Groups.*"))
                        plt.figure(figsize=(8, 6))
                        p_matrix.fillna(1.0, inplace=True)
                        sns.heatmap(p_matrix, annot=True, cmap="coolwarm_r", vmin=0, vmax=0.05)
                        plt.show()

            # Logic: T-TEST / MANN-WHITNEY
            elif method_key in ['ttest_ind', 'mannwhitney']:
                groups = x_data.unique()
                if len(groups) != 2:
                    print("Error: Needs exactly 2 groups.")
                    return
                g1, g2 = y_data[x_data == groups[0]], y_data[x_data == groups[1]]
                
                if method_key == 'ttest_ind': stat, p = stats.ttest_ind(g1, g2)
                else: stat, p = stats.mannwhitneyu(g1, g2)
                
                print(f"Statistic: {stat:.4f}, P-Value: {p:.4e}")
                if p < 0.05: display(Markdown("**Verdict:** âœ… Significant Difference."))
                else: display(Markdown("**Verdict:** âš ï¸ No Significant Difference."))
                
                plt.figure(figsize=(8, 6))
                sns.boxplot(x=x_col, y=y_col, data=df_clean, hue=x_col, palette="Set2", legend=False)
                plt.show()

            # Logic: CORRELATIONS / CHI2
            elif method_key in ['pearson', 'spearman', 'chi2']:
                if method_key == 'chi2':
                    ct = pd.crosstab(x_data, y_data)
                    stat, p, _, _ = stats.chi2_contingency(ct)
                    print(f"P-Value: {p:.4e}")
                    sns.heatmap(ct, annot=True, fmt='d', cmap="Blues")
                else:
                    if method_key == 'pearson': stat, p = stats.pearsonr(x_data, y_data)
                    else: stat, p = stats.spearmanr(x_data, y_data)
                    print(f"r: {stat:.4f}, P-Value: {p:.4e}")
                    sns.regplot(x=x_col, y=y_col, data=df_clean, line_kws={'color':'red'})
                plt.show()

        except Exception as e:
            print(f"Analysis Error: {e}")

# --- 4. LAYOUT ---
uploader.observe(on_upload_change, names='value')
method_dropdown.observe(on_method_change, names='value')
run_button.on_click(run_analysis)

ui = widgets.VBox([
    header, 
    widgets.HTML("<hr>"),
    upload_label, uploader,
    widgets.HTML("<br>"),
    widgets.Label("Step 2: Select Variables"),
    widgets.HBox([x_dropdown, y_dropdown]),
    widgets.HTML("<br>"),
    widgets.Label("Step 3: Select Method"),
    method_dropdown,
    guide_accordion, # <--- The Guide is back here!
    widgets.HTML("<br>"),
    run_button,
    widgets.HTML("<hr>"),
    output_area
])

display(ui)